<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    >


<include layout="@layout/toolbar_base"></include>

    <RelativeLayout
        android:id="@+id/name_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:gravity="center"
        android:padding="15dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/icon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_addbill_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_name"
            android:text="@string/app_name"
            android:layout_centerVertical="true"
            android:textColor="@color/black_homne_tv"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_15_size"

            />
        <EditText
            android:id="@+id/ed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="可填写平台名称"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_15_size"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/money_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name_rl"
        android:gravity="center"
        android:padding="15dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="1dp"


        >
        <ImageView
            android:id="@+id/icon_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_addbill_money"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_money"
            android:text="@string/app_name"
            android:layout_centerVertical="true"
            android:textColor="@color/black_homne_tv"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_15_size"
            />
        <EditText
            android:id="@+id/ed_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="可填写平台名称"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_15_size"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/date_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/money_rl"
        android:gravity="center"
        android:padding="15dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <ImageView
            android:id="@+id/icon_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_addbill_date"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_date"
            android:text="@string/app_name"
            android:layout_centerVertical="true"
            android:textColor="@color/black_homne_tv"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_15_size"
            />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="2018-11-09"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_next"
            android:textSize="@dimen/text_15_size"

            />
        <ImageView
            android:id="@+id/img_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_addbill_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_late"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:layout_constraintTop_toBottomOf="@+id/date_rl"
        android:layout_centerVertical="true"
        android:text="剩余还款日期：9天"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_margin"
        android:layout_marginTop="@dimen/login_margin"
        android:layout_marginRight="@dimen/login_margin"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_rectangle_solid_blue"
        android:gravity="center"
        android:padding="5dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>