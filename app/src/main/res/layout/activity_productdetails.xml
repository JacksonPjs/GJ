<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toolstext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <include layout="@layout/toolbar_base"></include>

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:background="@drawable/shape_item_home_btn"
        android:text="@string/applynow"
        android:textColor="@color/white"
        android:textSize="@dimen/text_details_larger"
        app:layout_constraintBottom_toBottomOf="parent" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/details_nested"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@+id/btn_apply"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:focusableInTouchMode="true"
        app:layout_constraintVertical_weight="1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/details_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_details_tip"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/image"
                    android:text="支付宝"
                    android:textColor="@color/black_homne_tv"
                    android:textSize="@dimen/text_details_larger" />

                <TextView
                    android:id="@+id/details_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_name"
                    android:layout_alignLeft="@+id/details_name"
                    android:layout_marginTop="5dp"
                    android:text="一小时快速到账，优质服务。"
                    android:textColor="@color/black_details_tv"
                    android:textSize="@dimen/text_15_size" />

                <TextView
                    android:id="@+id/deatils_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_orange"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:text="已19268人申请"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/edu_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/details_rl"
                toolstext:layout_constraintEnd_toStartOf="@+id/data_ll"
                toolstext:layout_constraintHorizontal_weight="1"
                toolstext:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_details1" />

                <TextView
                    android:id="@+id/details_ede"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_homne_tv"
                    android:textSize="@dimen/text_15_size"
                    android:text="3K~5K"
                    android:layout_marginTop="5dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_details_tv"
                    android:textSize="@dimen/text_details_small"
                    android:layout_marginTop="3dp"
                    android:text="额度范围" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/data_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toTopOf="@+id/edu_ll"
                toolstext:layout_constraintEnd_toStartOf="@+id/lilv_ll"
                toolstext:layout_constraintHorizontal_weight="1"
                toolstext:layout_constraintStart_toEndOf="@+id/edu_ll">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_details2" />

                <TextView
                    android:id="@+id/details_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30天-两个月"
                    android:textColor="@color/black_homne_tv"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/text_15_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借款期限"
                    android:textColor="@color/black_details_tv"
                    style="@style/AlertDialog.AppCompat"
                    android:layout_marginTop="3dp"
                    android:textSize="@dimen/text_details_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lilv_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toTopOf="@+id/edu_ll"
                toolstext:layout_constraintEnd_toStartOf="@+id/time_ll"
                toolstext:layout_constraintHorizontal_weight="1"
                toolstext:layout_constraintStart_toEndOf="@+id/data_ll">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_details3" />

                <TextView
                    android:id="@+id/details_lilv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.01%/日"
                    android:textColor="@color/black_homne_tv"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/text_15_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参考利率"
                    android:textColor="@color/black_details_tv"
                    android:layout_marginTop="3dp"
                    android:textSize="@dimen/text_details_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toTopOf="@+id/edu_ll"
                toolstext:layout_constraintEnd_toEndOf="parent"
                toolstext:layout_constraintHorizontal_weight="1"
                toolstext:layout_constraintStart_toEndOf="@+id/lilv_ll">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_details4" />

                <TextView
                    android:id="@+id/details_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1小时"
                    android:textColor="@color/black_homne_tv"
                    android:textSize="@dimen/text_15_size"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="放款时间"
                    android:textColor="@color/black_details_tv"
                    android:layout_marginTop="3dp"
                    android:textSize="@dimen/text_details_small" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/edu_ll"
                tools:layoutManager="LinearLayoutManager"
                tools:listitem="@layout/item_details"
                android:layout_marginTop="20dp"
                tools:spanCount="4"></android.support.v7.widget.RecyclerView>


        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>