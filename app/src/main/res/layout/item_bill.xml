<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"


    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bill_item_icon"
        android:src="@mipmap/icon_bill_item"
        android:layout_margin="@dimen/bill_margin"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="@string/app_name"
        android:textSize="@dimen/text_15_size"
        android:textColor="@color/black_homne_tv"
        app:layout_constraintTop_toTopOf="@+id/bill_item_icon"
        android:layout_marginLeft="@dimen/bill_margin"
        app:layout_constraintLeft_toRightOf="@+id/bill_item_icon"

        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/data"
        app:layout_constraintLeft_toRightOf="@+id/bill_item_icon"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintStart_toStartOf="@id/name"
        android:text="@string/app_name"
        android:textSize="@dimen/text_12_size"
        android:textColor="@color/orange_tv"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/money"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Â¥2000.00"
        app:layout_constraintTop_toTopOf="@id/bill_item_icon"
        app:layout_constraintBottom_toBottomOf="@id/bill_item_icon"
        android:textColor="@color/orange_tv"
        />

</android.support.constraint.ConstraintLayout>